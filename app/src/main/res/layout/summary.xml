<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <Button
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:onClick="back"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_below="@+id/back"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/spacer1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer1"
        android:layout_alignParentRight="false"
        android:text="Student Record"
        android:textSize="22sp"
        android:id="@+id/nwStdLabel"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25px"
        android:layout_below="@+id/nwStdLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/spacer2"
        />

    <ImageView
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:layout_below="@+id/spacer2"
        android:id="@+id/imageView"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/spacer3"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:layout_below="@+id/spacer3"
        android:layout_marginLeft="30px"
        android:id="@+id/nameText"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:layout_below="@+id/nameText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/spacer4"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Number"
        android:textSize="20sp"
        android:layout_below="@+id/spacer4"
        android:layout_marginLeft="30px"
        android:id="@+id/stdNumText"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:layout_below="@+id/stdNumText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/spacer5"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course"
        android:textSize="20sp"
        android:layout_below="@+id/spacer5"
        android:layout_marginLeft="30px"
        android:id="@+id/courseText"
        />


</RelativeLayout>